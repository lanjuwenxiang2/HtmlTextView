<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="onClick"
            type="android.view.View.OnClickListener" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.ljwx.view.HtmlTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:htvTv1Bold="false"
            app:htvTv1Color="#ff0000"
            app:htvTv1Size="12dp"
            app:htvTv1String="abc"
            app:htvTv2Bold="true"
            app:htvTv2Color="#00ff00"
            app:htvTv2Size="14dp"
            app:htvTv2String="中文"
            app:htvTv3Bold="false"
            app:htvTv3Color="#0000ff"
            app:htvTv3Size="19dp"
            app:htvTv3String="123(常规显示)" />

        <com.ljwx.view.HtmlTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:htvTv1Bold="false"
            app:htvTv1Color="#ff0000"
            app:htvTv1Size="12dp"
            app:htvTv1String="abc"
            app:htvTv2Bold="false"
            app:htvTv2Color="#00ff00"
            app:htvTv2MarginL="5dp"
            app:htvTv2MarginR="20dp"
            app:htvTv2Size="14dp"
            app:htvTv2String="中文"
            app:htvTv3Bold="false"
            app:htvTv3Color="#0000ff"
            app:htvTv3Size="19dp"
            app:htvTv3String="123(设置中间文字左右间距)" />

        <com.ljwx.view.HtmlTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:htvGravityMode="average"
            app:htvTv1Bold="false"
            app:htvTv1Color="#ff0000"
            app:htvTv1Size="12dp"
            app:htvTv1String="abc"
            app:htvTv2Bold="true"
            app:htvTv2Color="#00ff00"
            app:htvTv2MarginBottom="0.5dp"
            app:htvTv2Size="20dp"
            app:htvTv2String="中文"
            app:htvTv3Bold="false"
            app:htvTv3Color="#0000ff"
            app:htvTv3Size="19dp"
            app:htvTv3String="123(分散)" />

        <com.ljwx.view.HtmlTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:htvGravityMode="average"
            app:htvTv1Bold="false"
            app:htvTv1Color="#ff0000"
            app:htvTv1Size="12dp"
            app:htvTv1String="abc"
            app:htvTv2Bold="true"
            app:htvTv2Color="#00ff00"
            app:htvTv2MarginBottom="0.5dp"
            app:htvTv2Offset="50dp"
            app:htvTv2Size="20dp"
            app:htvTv2String="中文"
            app:htvTv3Bold="false"
            app:htvTv3Color="#0000ff"
            app:htvTv3Size="19dp"
            app:htvTv3String="123(偏移)" />

        <com.ljwx.view.HtmlTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:htvBaseLineMode="mid"
            app:htvTv1Bold="false"
            app:htvTv1Color="#ff0000"
            app:htvTv1Size="12dp"
            app:htvTv1String="abc"
            app:htvTv2Bold="true"
            app:htvTv2Color="#00ff00"
            app:htvTv2Size="18dp"
            app:htvTv2String="中文"
            app:htvTv3Bold="false"
            app:htvTv3Color="#0000ff"
            app:htvTv3Size="25dp"
            app:htvTv3String="123(控件中间线对齐)" />

    </LinearLayout>
</layout>